@model SimpleStoreSite.Models.Category

<h2>Delete Category</h2>

<p>Are you sure?</p>

<ul>
    <li>Id: @Model.Id</li>
    <li>Name: @Model.Name</li>
</ul>

<form method="post" action="/Categories/DeleteConfirmed/@Model.Id">
    <button class="btn danger" type="submit">Delete</button>
    <a class="btn ghost" href="/Categories">Back</a>
</form>
